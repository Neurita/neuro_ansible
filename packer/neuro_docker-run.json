{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "neuro_docker",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt update",
        "apt install python3 locales rsync -yq"
      ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "playbook.yml",
      "inventory_file": "docker_hosts.yml",
      "groups": ["docker_container"],
      "extra_arguments": ["-v"]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "neurita/neuro_docker",
      "tag": "0.1"
    }
  ]
}
