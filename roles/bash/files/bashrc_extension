
# Git
source $HOME/.scripts/git-completion.sh

# Z
source $HOME/.scripts/z.sh

# helper functions
addpath() {
    if [ -e $1 ]; then
        export PATH=$PATH:$1
    fi
}

addlibpath() {
    if [ -e $1 ]; then
        export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:$1
    fi
}

# other stuff
for i in `ls ~/.bash.d/*.bash`; do source $i; done
